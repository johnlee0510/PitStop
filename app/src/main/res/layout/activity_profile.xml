<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="PitStop.Controller.ProfileActivity"
    android:background="@drawable/food">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile"
        android:textSize="36sp"
        tools:ignore="HardcodedText"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/toolbar4"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/name"
        android:textSize="18sp"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/profile"
        android:layout_alignStart="@+id/nameInput" />

    <TextView
        android:text="Email "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/email"
        android:textSize="18sp"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/nameInput"
        android:layout_alignEnd="@+id/name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailInput"
        android:text="Email"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/nameInput"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp" />

    <TextView
        android:text="Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/address"
        android:textSize="18sp"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/emailInput"
        android:layout_alignStart="@+id/nameInput" />

    <TextView
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/phoneNumber"
        android:textSize="18sp"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/addressInput"
        android:layout_alignStart="@+id/emailInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/addressInput"
        android:layout_below="@+id/address"
        android:layout_alignStart="@+id/address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneInput"
        android:layout_below="@+id/phoneNumber"
        android:layout_alignStart="@+id/phoneNumber" />

    <info.hoang8f.widget.FButton
        android:text="Save"
        fbutton:buttonColor="#42d284"
        fbutton:shadowColor="#2cb46a"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        android:background="@drawable/button_shape"
        tools:ignore="HardcodedText"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/phoneInput"
        android:layout_alignEnd="@+id/addressInput" />

    <info.hoang8f.widget.FButton
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelProfile"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        fbutton:buttonColor="#42d284"
        fbutton:shadowColor="#2cb46a"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:background="@drawable/button_shape"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/save"
        android:layout_alignBottom="@+id/save"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />




</RelativeLayout>
