<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="PitStop.Controller.ProfileActivity"
    android:background="@drawable/food">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile"
        android:textSize="36sp"
        tools:ignore="HardcodedText"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/toolbar4"
        android:layout_toEndOf="@+id/usernameProf" />

    <TextView
        android:text="Email "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textSize="18sp"
        tools:ignore="HardcodedText"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/usernameProftext"
        android:layout_alignStart="@+id/usernameProftext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailInput"
        android:text="Email"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email" />

    <TextView
        android:id="@+id/usernameProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="18sp"
        tools:ignore="HardcodedText"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/profile"
        android:layout_toStartOf="@+id/cancelProfile" />

    <TextView
        android:id="@+id/usernameProftext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Username"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/usernameProf"
        android:layout_alignStart="@+id/usernameProf" />


    <info.hoang8f.widget.FButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailInput"
        android:layout_marginStart="52dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/button_shape"
        android:fontFamily="sans-serif-light"
        android:text="Ok"
        android:textColor="#FFF"
        fbutton:buttonColor="#42d284"
        fbutton:cornerRadius="10dp"
        fbutton:shadowColor="#2cb46a"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        tools:ignore="HardcodedText" />

    <info.hoang8f.widget.FButton
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelProfile"
        android:textColor="#FFF"
        android:fontFamily="sans-serif-light"
        fbutton:buttonColor="#42d284"
        fbutton:shadowColor="#2cb46a"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="10dp"
        android:background="@drawable/button_shape"
        tools:ignore="HardcodedText"
        android:layout_marginStart="59dp"
        android:layout_alignBaseline="@+id/save"
        android:layout_alignBottom="@+id/save"
        android:layout_toEndOf="@+id/save" />




</RelativeLayout>
